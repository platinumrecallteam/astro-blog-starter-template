---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Contact | ${SITE_TITLE}`} />
  </head>

  <body>
    <Header />

    <main class="page">
      <section class="card">
        <h1>Contact Platinum Recall Team</h1>

        <p class="subtitle">
          Questions about mobile recall services, fleet coverage, or partnerships?
          Reach out and our team will respond promptly.
        </p>

        <!-- CONTACT FORM -->
        <form
          action="https://formsubmit.co/nelbertkrause@gmail.com"
          method="POST"
          class="contact-form"
        >
          <!-- FORM CONFIG -->
          <input
            type="hidden"
            name="_subject"
            value="New Dealer / Fleet Inquiry"
          />
          <input type="hidden" name="_captcha" value="false" />

          <!-- ROUTING DROPDOWN -->
          <div class="field">
            <label>Inquiry Type</label>
            <select name="Inquiry Type" required>
              <option value="">Select one</option>
              <option value="Dealer Inquiry">Dealer Inquiry</option>
              <option value="Fleet Inquiry">Fleet Inquiry</option>
              <option value="Commercial / Other">Commercial / Other</option>
            </select>
          </div>

          <div class="field">
            <label>Name</label>
            <input type="text" name="name" required />
          </div>

          <div class="field">
            <label>Email</label>
            <input type="email" name="email" required />
          </div>

          <div class="field">
            <label>Company</label>
            <input type="text" name="company" />
          </div>

          <div class="field">
            <label>Message</label>
            <textarea name="message" rows="5" required></textarea>
          </div>

          <button type="submit">Send Message</button>
        </form>
      </section>
    </main>

    <Footer />

    <!-- STYLES -->
    <style>
      .page {
        max-width: 800px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
      }

      h1 {
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 0.75rem;
        color: #020617;
      }

      .subtitle {
        color: #475569;
        margin-bottom: 2rem;
        font-size: 1.05rem;
      }

      .card {
        background: white;
        border-radius: 18px;
        padding: 3rem;
        box-shadow: 0 20px 45px rgba(15, 23, 42, 0.08);
      }

      .contact-form {
        display: grid;
        gap: 1.25rem;
      }

      .field {
        display: flex;
        flex-direction: column;
      }

      label {
        font-weight: 600;
        margin-bottom: 0.4rem;
        color: #020617;
      }

      input,
      textarea,
      select {
        padding: 0.75rem;
        border-radius: 8px;
        border: 1px solid #cbd5e1;
        font-size: 1rem;
        background: white;
      }

      select {
        cursor: pointer;
      }

      button {
        margin-top: 1rem;
        padding: 0.9rem 1.5rem;
        background: linear-gradient(135deg, #020617, #0f172a);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 700;
        letter-spacing: 0.04em;
        cursor: pointer;
      }
    </style>
  </body>
</html>
