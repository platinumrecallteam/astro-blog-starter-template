---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="page">
      <!-- HERO -->
      <section class="card hero">
        <h1>Multi-State Mobile Automotive Recall Services</h1>

        <p class="subtitle">
          Manufacturer-compliant recall repairs performed on-site by certified
          mobile technicians — <strong>at no cost to the customer</strong>.
        </p>

        <!-- VIN DECODER -->
        <form
          action="https://www.nhtsa.gov/recalls"
          method="get"
          target="_blank"
          class="vin-form"
        >
          <input
            type="text"
            name="vin"
            placeholder="Enter VIN (17 characters)"
            maxlength="17"
            required
          />
          <button type="submit">Check VIN for Recalls</button>
        </form>

        <a href="/schedule" class="cta">
          Schedule Free Recall Service
        </a>
      </section>

      <!-- WHAT WE DO -->
      <section class="card">
        <h2>What We Do</h2>

        <p>
          Platinum Recall Team provides mobile, OEM-compliant automotive recall
          services designed for dealerships, fleets, and commercial operations.
          We eliminate downtime and operational friction by completing recall
          repairs directly at your location.
        </p>

        <ul class="features">
          <li>✔ Mobile OEM recall service with fast, compliant completion</li>
          <li>✔ All manufacturer recalls performed on-site</li>
          <li>✔ Factory-certified technicians with OEM experience</li>
          <li>✔ Built for dealerships, fleets, and commercial operators</li>
          <li>✔ Reduces service bay congestion and off-site logistics</li>
          <li>✔ Disciplined, scalable process with consistent results</li>
        </ul>
      </section>

      <!-- SERVICE AREAS WITH MAP -->
      <section class="card service-areas">
        <h2>Service Areas</h2>

        <div class="service-grid">
          <div>
            <p>
              We provide mobile automotive recall services across key U.S.
              markets, deploying directly to dealership and fleet locations to
              complete OEM-approved recalls on-site.
            </p>

            <ul class="states-list">
              <li>Texas</li>
              <li>Arkansas</li>
              <li>Oklahoma</li>
              <li>Louisiana</li>
              <li>Tennessee</li>
              <li>Kentucky</li>
              <li>Missouri</li>
              <li>Illinois</li>
              <li>Florida</li>
              <li>Wisconsin</li>
              <li>Indiana</li>
            </ul>
          </div>

          <img
  src="https://upload.wikimedia.org/wikipedia/commons/3/32/Blank_US_Map_%28states_only%29.svg"
  alt="United States service area map"
  class="us-map"
/>

        </div>
      </section>
    </main>

    <Footer />

    <!-- STYLES -->
    <style>
      :root {
  --blue: #0ea5e9;
  --blue-dark: #0284c7;
  --dark: #0f172a;
  --gray-dark: #1f2937;
  --gray: #475569;
  --gray-light: #e5e7eb;
  --bg: #f8fafc;
}
.hero {
        text-align: center;
      }

      .subtitle {
        max-width: 720px;
        margin: 0.75rem auto 1.5rem;
        color: #334155;
        font-size: 1.05rem;
      }

      .vin-form {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        margin-bottom: 1rem;
        flex-wrap: wrap;
      }

      .vin-form input {
        padding: 0.7rem;
        min-width: 260px;
        border-radius: 6px;
        border: 1px solid #cbd5e1;
      }

      .vin-form button {
        padding: 0.7rem 1.2rem;
        background: #0ea5e9;
        color: white;
        border-radius: 6px;
        border: none;
        font-weight: 600;
      }

      .cta {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.8rem 1.5rem;
        background: #0f172a;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
      }

      .features li {
        margin-bottom: 0.5rem;
        color: #1f2937;
        font-weight: 500;
      }

      .service-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: center;
      }

      .states-list {
        margin-top: 1rem;
        padding-left: 1rem;
        columns: 2;
      }

      .states-list li {
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 0.4rem;
      }

      .us-map {
        width: 100%;
        max-width: 420px;
        opacity: 0.95;
      }

      @media (max-width: 768px) {
        .service-grid {
          grid-template-columns: 1fr;
        }

        .states-list {
          columns: 1;
        }
      }
    </style>
  </body>
</html>
