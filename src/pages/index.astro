---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="page">
      <!-- HERO -->
      <section class="card hero">
        <h1>Mobile OEM Recall Services</h1>

        <p class="subtitle">
          Manufacturer-compliant recall repairs performed on-site by certified
          mobile technicians â€” <strong>at no cost to the customer</strong>.
        </p>

        <!-- VIN DECODER -->
        <form
          action="https://www.nhtsa.gov/recalls"
          method="get"
          target="_blank"
          class="vin-form"
        >
          <input
            type="text"
            name="vin"
            placeholder="Enter VIN (17 characters)"
            maxlength="17"
            required
          />
          <button type="submit">Check VIN for Recalls</button>
        </form>

        <a href="/schedule" class="cta">
          Schedule Free Recall Service
        </a>
      </section>

      <!-- WHAT WE DO -->
      <section class="card">
        <h2>What We Do</h2>

        <p class="body-text">
          Platinum Recall Team delivers mobile, OEM-compliant automotive recall
          services designed for dealerships, fleets, and commercial operators.
          We remove friction, downtime, and operational burden by completing
          recall repairs directly at your location.
        </p>

        <ul class="features">
          <li>Mobile OEM recall service specializing in fast, compliant completion</li>
          <li>All manufacturer recalls performed on-site</li>
          <li>Factory-certified technicians with OEM experience</li>
          <li>Supports dealerships, fleets, and commercial operations</li>
          <li>Reduces service bay congestion and off-site service needs</li>
          <li>Disciplined, scalable process delivering consistent results</li>
        </ul>
      </section>

<!-- OEM PARTNERS -->
<section class="card oem-section">
  <h2>Supported OEM Brands</h2>

  <p class="body-text">
    Our technicians are trained to perform manufacturer-compliant recall repairs
    for the following automotive brands.
  </p>

  <div class="oem-logos">
    <img src="/logos/ford.svg" alt="Ford" />
    <img src="/logos/dodge.svg" alt="Dodge" />
    <img src="/logos/chrysler.svg" alt="Chrysler" />
    <img src="/logos/jeep.svg" alt="Jeep" />
    <img src="/logos/ram.svg" alt="Ram" />
    <img src="/logos/chevrolet.svg" alt="Chevrolet" />
    <img src="/logos/gmc.svg" alt="GMC" />
    <img src="/logos/hyundai.svg" alt="Hyundai" />
    <img src="/logos/kia.svg" alt="Kia" />
  </div>
</section>


      <!-- SERVICE AREAS -->
      <section class="card service-areas">
        <h2>Service Areas</h2>

        <div class="service-grid">
          <div>
            <p class="body-text">
              We operate across multiple U.S. states, deploying certified mobile
              technicians directly to dealership and fleet locations to complete
              manufacturer-approved recall work on-site.
            </p>

            <ul class="states-list">
              <li>Texas</li>
              <li>Arkansas</li>
              <li>Oklahoma</li>
              <li>Louisiana</li>
              <li>Tennessee</li>
              <li>Kentucky</li>
              <li>Missouri</li>
              <li>Illinois</li>
              <li>Florida</li>
              <li>Wisconsin</li>
              <li>Indiana</li>
            </ul>
          </div>

          <img
            src="https://upload.wikimedia.org/wikipedia/commons/3/32/Blank_US_Map_%28states_only%29.svg"
            alt="United States service area map"
            class="us-map"
          />
        </div>
      </section>
    </main>

    <Footer />

    <!-- PREMIUM STYLES -->
    <style>
      :root {
        --blue: #0ea5e9;
        --blue-dark: #0284c7;
        --dark: #020617;
        --gray-dark: #1f2937;
        --gray: #475569;
        --gray-light: #e5e7eb;
        --bg: #f8fafc;
      }

      body {
        background: var(--bg);
        color: var(--gray-dark);
        font-family: Inter, system-ui, -apple-system, BlinkMacSystemFont,
          "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        line-height: 1.65;
        -webkit-font-smoothing: antialiased;
      }

      .page {
        max-width: 1100px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
      }

      h1 {
        font-size: clamp(2.4rem, 4vw, 3.2rem);
        font-weight: 800;
        letter-spacing: -0.03em;
        color: var(--dark);
        margin-bottom: 0.75rem;
      }

      h2 {
        font-size: 1.85rem;
        font-weight: 750;
        letter-spacing: -0.02em;
        color: var(--dark);
        margin-bottom: 1rem;
      }

      .subtitle {
        font-size: 1.15rem;
        color: #334155;
        max-width: 760px;
        margin: 1rem auto 2rem;
      }

      .body-text {
        font-size: 1.05rem;
        max-width: 760px;
        color: #1f2937;
      }

      .card {
        background: linear-gradient(
          180deg,
          rgba(255, 255, 255, 0.98),
          rgba(255, 255, 255, 1)
        );
        border: 1px solid var(--gray-light);
        border-radius: 18px;
        padding: 3rem;
        margin-bottom: 3rem;
        box-shadow:
          0 20px 45px rgba(15, 23, 42, 0.08),
          0 2px 8px rgba(15, 23, 42, 0.04);
      }

      .hero {
        text-align: center;
      }

      .vin-form {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        margin-bottom: 1.25rem;
        flex-wrap: wrap;
      }

      .vin-form input {
        padding: 0.85rem 1rem;
        min-width: 280px;
        border-radius: 10px;
        border: 1px solid #cbd5e1;
        font-size: 1rem;
      }

      .vin-form button {
        padding: 0.85rem 1.5rem;
        background: linear-gradient(135deg, #0ea5e9, #0284c7);
        color: white;
        border-radius: 10px;
        border: none;
        font-weight: 700;
        letter-spacing: 0.02em;
        box-shadow: 0 10px 20px rgba(14, 165, 233, 0.25);
        cursor: pointer;
      }

      .cta {
        display: inline-block;
        margin-top: 1.25rem;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #020617, #0f172a);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 800;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        box-shadow: 0 14px 30px rgba(2, 6, 23, 0.35);
      }

      .features {
        margin-top: 1.5rem;
        padding-left: 1.25rem;
      }

      .features li {
        margin-bottom: 0.6rem;
        font-weight: 600;
      }

      .vehicle-grid {
        margin-top: 1.5rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 0.75rem;
        list-style: none;
        padding: 0;
      }

      .vehicle-grid li {
        background: #f1f5f9;
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-weight: 700;
        text-align: center;
        color: var(--dark);
      }

      .service-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: center;
      }

      .states-list {
        margin-top: 1rem;
        padding-left: 1rem;
        columns: 2;
      }

      .states-list li {
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 0.4rem;
      }

      .us-map {
        width: 100%;
        max-width: 420px;
        opacity: 0.95;
      }

      @media (max-width: 768px) {
        .service-grid {
          grid-template-columns: 1fr;
        }

        .states-list {
          columns: 1;
        }
      }
    </style>
  </body>
</html>
