---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="page">
      <!-- HERO -->
      <section class="card hero">
        <h1>Mobile OEM Recall Services</h1>

        <p class="subtitle">
          Manufacturer-compliant recall repairs performed on-site by certified
          mobile technicians — <strong>at no cost to the customer</strong>.
<p class="subtitle">
  Enter your VIN and our OEM-certified mobile team will verify open recalls
  and contact you to schedule <strong>free on-site service</strong>.
</p>

        </p>

        <!-- VIN DECODER -->
        <form
  action="https://formsubmit.co/nelbertkrause@gmail.com"
  method="POST"
  class="vin-form"
>
  <input type="hidden" name="_subject" value="New VIN Recall Check Request" />
  <input type="hidden" name="_captcha" value="false" />
  <input type="hidden" name="_next" value="/schedule" />

  <input
    type="text"
    name="vin"
    placeholder="Enter VIN (17 characters)"
    maxlength="17"
    required
  />

  <button type="submit">Request Recall Check</button>
</form>

          <input
            type="text"
            name="vin"
            placeholder="Enter VIN (17 characters)"
            maxlength="17"
            required
          />

        <a href="/schedule" class="cta">
          Schedule Free Recall Service
        </a>
      </section>

      <!-- WHAT WE DO -->
      <section class="card">
        <h2>What We Do</h2>

        <p class="body-text">
          Platinum Recall Team delivers mobile, OEM-compliant automotive recall
          services designed for dealerships, fleets, and commercial operators.
          We remove friction, downtime, and operational burden by completing
          recall repairs directly at your location.
        </p>

        <ul class="features">
          <li>Mobile OEM recall service specializing in fast, compliant completion</li>
          <li>All manufacturer recalls performed on-site</li>
          <li>Factory-certified technicians with OEM experience</li>
          <li>Supports dealerships, fleets, and commercial operations</li>
          <li>Reduces service bay congestion and off-site service needs</li>
          <li>Disciplined, scalable process delivering consistent results</li>
        </ul>
      </section>

      <!-- OEM PARTNERS -->
      <section class="card oem-section">
        <h2>Supported OEM Brands</h2>

        <p class="body-text">
          Our technicians are trained to perform manufacturer-compliant recall
          repairs for the following automotive brands.
        </p>

        <div class="oem-logos">
          <img src="/logos/ford.png" alt="Ford" />
          <img src="/logos/mopar.png" alt="Mopar" />
          <img src="/logos/gm.png" alt="General Motors" />
          <img src="/logos/hyundai.png" alt="Hyundai" />
          <img src="/logos/kia.png" alt="Kia" />
        </div>
      </section>

      <!-- SERVICE AREAS -->
      <section class="card service-areas">
        <h2>Service Areas</h2>

        <div class="service-grid">
          <div>
            <p class="body-text">
              We operate across multiple U.S. states, deploying certified mobile
              technicians directly to dealership and fleet locations to complete
              manufacturer-approved recall work on-site.
            </p>

            <ul class="states-list">
              <li>Texas</li>
              <li>Arkansas</li>
              <li>Oklahoma</li>
              <li>Louisiana</li>
              <li>Tennessee</li>
              <li>Kentucky</li>
              <li>Missouri</li>
              <li>Illinois</li>
              <li>Florida</li>
              <li>Wisconsin</li>
              <li>Indiana</li>
            </ul>
          </div>

          <!-- ✅ YOUR MAP PNG -->
          <img
            src="/logos/map.png.png"
            alt="Platinum Recall Team service area map"
            class="us-map"
          />
        </div>
      </section>
    </main>

    <Footer />

    <!-- STYLES -->
    <style>
      :root {
        --blue: #0ea5e9;
        --blue-dark: #0284c7;
        --dark: #020617;
        --gray-dark: #1f2937;
        --gray: #475569;
        --gray-light: #e5e7eb;
        --bg: #f8fafc;
      }

      body {
        background: var(--bg);
        color: var(--gray-dark);
        font-family: Inter, system-ui, -apple-system, BlinkMacSystemFont,
          "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        line-height: 1.65;
      }

      .page {
        max-width: 1100px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
      }

      h1 {
        font-size: clamp(2.4rem, 4vw, 3.2rem);
        font-weight: 800;
        letter-spacing: -0.03em;
        color: var(--dark);
      }

      h2 {
        font-size: 1.85rem;
        font-weight: 750;
        color: var(--dark);
      }

      .subtitle {
        max-width: 760px;
        margin: 1rem auto 2rem;
        font-size: 1.15rem;
        color: #334155;
      }

      .body-text {
        max-width: 760px;
        font-size: 1.05rem;
      }

      .card {
        background: white;
        border-radius: 18px;
        padding: 3rem;
        margin-bottom: 3rem;
        box-shadow: 0 20px 45px rgba(15, 23, 42, 0.08);
      }

      .hero {
        text-align: center;
      }

      .vin-form {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      .vin-form input {
        padding: 0.85rem;
        min-width: 280px;
        border-radius: 10px;
        border: 1px solid #cbd5e1;
      }

      .vin-form button {
        padding: 0.85rem 1.5rem;
        background: linear-gradient(135deg, #0ea5e9, #0284c7);
        color: white;
        border-radius: 10px;
        border: none;
        font-weight: 700;
      }

      .cta {
        display: inline-block;
        margin-top: 1.25rem;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #020617, #0f172a);
        color: white;
        border-radius: 12px;
        font-weight: 800;
        text-decoration: none;
      }

      .oem-logos {
        display: flex;
        justify-content: center;
        gap: 2.5rem;
        flex-wrap: wrap;
        margin-top: 2rem;
      }

      .oem-logos img {
        height: 80px;
        width: auto;
        object-fit: contain;
      }

      .service-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: center;
      }

      .states-list {
        columns: 2;
        margin-top: 1rem;
      }

      .us-map {
        width: 100%;
        max-width: 480px;
        height: auto;
        display: block;
        margin: 0 auto;
        border-radius: 14px;
        box-shadow: 0 18px 40px rgba(2, 6, 23, 0.18);
      }

      @media (max-width: 768px) {
        .service-grid {
          grid-template-columns: 1fr;
        }
        .states-list {
          columns: 1;
        }
      }
    </style>
  </body>
</html>
