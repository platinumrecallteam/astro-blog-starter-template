---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="page">
      <!-- HERO -->
      <section class="card hero">
        <h1>Multi-State Mobile Automotive Recall Services</h1>

        <p class="subtitle">
          Manufacturer-compliant recall repairs performed on-site by certified
          mobile technicians â€” <strong>at no cost to the customer</strong>.
        </p>

        <!-- VIN DECODER -->
        <form
          action="https://www.nhtsa.gov/recalls"
          method="get"
          target="_blank"
          class="vin-form"
        >
          <input
            type="text"
            name="vin"
            placeholder="Enter VIN (17 characters)"
            maxlength="17"
            required
          />
          <button type="submit">Check VIN for Recalls</button>
        </form>

        <a href="/schedule" class="cta">
          Schedule Free Recall Service
        </a>
      </section>

      <!-- WHAT WE DO -->
      <section class="card">
        <h2>What We Do</h2>

        <p class="body-text">
          Platinum Recall Team delivers mobile, OEM-compliant automotive recall
          services for dealerships, fleets, and commercial operations.
