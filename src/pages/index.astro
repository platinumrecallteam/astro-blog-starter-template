---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="page">
      <!-- HERO -->
      <section class="card hero">
        <h1>Mobile OEM Recall Services</h1>

        <p class="subtitle">
          Manufacturer-compliant recall repairs performed on-site by certified
          mobile technicians â€” <strong>at no cost to the customer</strong>.
        </p>

        <p class="subtitle">
          Enter your VIN and our OEM-certified mobile team will verify open recalls
          and contact you to schedule <strong>free on-site service</strong>.
        </p>

        <!-- VIN REQUEST FORM -->
        <form
          action="https://formsubmit.co/nelbertkrause@gmail.com"
          method="POST"
          class="vin-form"
        >
          <input type="hidden" name="_subject" value="New VIN Recall Check Request" />
          <input type="hidden" name="_captcha" value="false" />
          <input type="hidden" name="_next" value="/schedule" />

          <input
            type="text"
            name="vin"
            placeholder="Enter VIN (17 characters)"
            maxlength="17"
            required
          />

          <button type="submit">Request Recall Check</button>
        </form>

        <a href="/schedule" class="cta">
          Schedule Free Recall Service
        </a>
      </section>

      <!-- WHAT WE DO -->
      <section class="card">
        <h2>What We Do</h2>

        <p class="body-text">
          Platinum Recall Team delivers mobile, OEM-compliant automotive recall
          services designed for dealerships, fleets, and commercial operators.
          We remove friction, downtime, and operational burden by completing
          recall repairs directly at your location.
        </p>

        <ul class="features">
          <li>Mobile OEM recall service specializing in fast, compliant completion</li>
          <li>All manufacturer recalls performed on-site</li>
          <li>Factory-certified technicians with OEM experience</li>
          <li>Supports dealerships, fleets, and commercial operations</li>
          <li>Reduces service bay congestion and off-site service needs</li>
          <li>Disciplined, scalable process delivering consistent results</li>
        </ul>
      </section>

      <!-- OEM PARTNERS -->
      <section class="card oem-section">
        <h2>Certified OEM Partners</h2>

        <p class="body-text">
          Our technicians are trained to perform manufacturer-compliant recall
          repairs for the following automotive brands.
        </p>

        <div class="oem-logos">
          <img src="/logos/ford.png" alt="Ford" />
          <img src="/logos/mopar.png" alt="Mopar" />
          <img src="/logos/gm.png" alt="General Motors" />
          <img src="/logos/hyundai.png" alt="Hyundai" />
          <img src="/logos/kia.png" alt="Kia" />
        </div>
      </section>

      <!-- SERVICE AREAS -->
      <section class="card service-areas">
        <h2>Service Areas</h2>

        <div class="service-grid">
          <div>
            <p class="body-text">
              We operate across multiple U.S. states, deploying certified mobile
              technicians directly to dealership and fleet locations to complete
              manufacturer-approved recall work on-site.
            </p>

            <ul class="states-list">
              <li>Texas</li>
              <li>Arkansas</li>
              <li>Oklahoma</li>
              <li>Louisiana</li>
              <li>Tennessee</li>
              <li>Kentucky</li>
              <li>Missouri</li>
              <li>Illinois</li>
              <li>Florida</li>
              <li>Wisconsin</li>
              <li>Indiana</li>
            </ul>
          </div>

          <!-- YOUR MAP -->
          <img
            src="/logos/map.png"
            alt="Platinum Recall Team service area map"
            class="us-map"
          />
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
